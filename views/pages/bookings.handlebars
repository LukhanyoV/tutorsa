<h1>Bookings</h1>

{{#if isStudent}}
<em>Hello there are you looking for a tutor, <a href="/book/search">search for tutor</a></em>
{{/if}}
{{#if isTutor}}
<em>As a tutor to be booked you need to add the subjects that you are tutoring for, <a href="/profile/edit">add or remove subjects</a></em>
{{/if}}

{{#if bookings}}
{{#if isStudent}}
<ul>
    {{#each bookings}}
    <li>
        <div>
            <p>Tutor: {{tutor}}</p>
            <p>Subject: {{subject}}</p>
            <p>Grade: {{grade}}</p>
            <p>Date: {{formatDate date}}</p>
            <p>Status: {{status}}</p>
            {{#if feedback}}<p>Feedback: {{feedback}}</p>{{/if}}
        </div>
        {{#if updates}}
        <div>
            <form action="/book/update" method="post">
                <input type="hidden" name="key" value="{{id}}">
                <select name="update">
                    {{#each updates}}
                    <option value="{{key}}">{{name}}</option>
                    {{/each}}
                </select>
                <button>update</button>
            </form>
        </div>
        {{/if}}
    </li>
    {{/each}}
</ul>
{{/if}}
{{#if isTutor}}
<ul>
    {{#each bookings}}
    <li>
        <div>
            <p>Student: {{student}}</p>
            <p>Subject: {{subject}}</p>
            <p>Grade: {{grade}}</p>
            <p>Date: {{formatDate date}}</p>
            <p>Status: {{status}}</p>
            {{#if feedback}}<p>Feedback: {{feedback}}</p>{{/if}}
        </div>
        {{#if updates}}
        <div>
            <form action="/book/update" method="post">
                <input type="hidden" name="key" value="{{id}}">
                <select name="update">
                    {{#each updates}}
                    <option value="{{key}}">{{name}}</option>
                    {{/each}}
                </select>
                <button>update</button>
            </form>
        </div>
        {{/if}}
    </li>
    {{/each}}
</ul>
{{/if}}
{{/if}}

{{#unless bookings}}
<h2>No bookings have been made yet</h2>
{{/unless}}

